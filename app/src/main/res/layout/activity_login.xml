<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg"
    tools:context=".Login">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/signup_header"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter your credentials"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/signup_header"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/benifit_bg"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:paddingStart="10dp"
            android:textSize="14dp"
            android:background="@drawable/textbox_bg"
            android:drawableLeft="@drawable/email"
            android:hint="  Email Id"
            android:paddingLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbox_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/psw_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox_bg"
                android:drawableLeft="@drawable/password"
                android:hint="  Password"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/show_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/invisible_password"/>

        </LinearLayout>

        <Button
            android:id="@+id/foget_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:drawableRight="@drawable/arrow_right"
            android:onClick="movetoforget"
            android:paddingRight="16dp"
            android:text="Forget Password"
            android:textAllCaps="false"
            android:textColor="#6c63ff" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_bg"
            android:onClick="movetosubscribe"
            android:text="Log In"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:onClick="backtosignup"
            android:text="Create an account..."
            android:textAllCaps="false"
            android:textColor="#6c63ff"
            android:textSize="16dp" />

    </LinearLayout>


</RelativeLayout>